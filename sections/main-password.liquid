{% schema %}
  {
    "name": "Password Section",
    "class": "section-main-password",
    "tag": "section",
    "settings": []
  }
{% endschema %}

<style>
  .section-main-password {
    min-height: 100vh;
    min-height: 100svh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-block: --spacing(12);
  }

  .section-main-password .main-password__inner {
    padding-inline: --spacing(6);
    width: min(100%, 520px);
  }

  .section-main-password .main-password__form {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: --spacing(6);
    text-align: center;
  }

  .section-main-password .main-password__field {
    display: flex;
    flex-direction: column;
    gap: --spacing(2);
    width: min(100%, 420px);
  }

  .section-main-password .main-password__field .slayed-input {
    width: 100%;
    margin-bottom: 30px;
  }

  .section-main-password .main-password__submit {
    display: flex;
    justify-content: center;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const passwordInput = document.querySelector('.main-password__field input[name="password"]');
    if (passwordInput) {
      passwordInput.focus();
    }
  });
</script>

<section>
  <div class="main-password__inner container">
    {% form 'storefront_password' %}
      {{ form.errors | default_errors }}

      <div class="main-password__form">
        <div class="main-password__field">
          <input class="slayed-input" type="password" name="password" placeholder="Password" />
        </div>

        <div class="main-password__submit">
          <input class="btn" type="submit" value="Sign in" />
        </div>
      </div>
    {% endform %}
  </div>
</section>
