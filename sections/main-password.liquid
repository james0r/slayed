{% schema %}
  {
    "name": "Password Section",
    "class": "section-main-password",
    "tag": "section",
    "settings": []
  }
{% endschema %}

<style>
  .section-main-password {
    min-height: 100vh;
    min-height: 100svh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-block: 3rem;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const passwordInput = document.querySelector('.main-password__field input[name="password"]');
    if (passwordInput) {
      passwordInput.focus();
    }
  });
</script>

<section>
  <div class="main-password__inner container w-full max-w-[520px] px-6">
    {% form 'storefront_password' %}
      {{ form.errors | default_errors }}

      <div class="main-password__form flex flex-col items-center gap-6 text-center">
        <div class="main-password__field flex w-full max-w-[420px] flex-col gap-2">
          <input class="slayed-input mb-[30px] w-full" type="password" name="password" placeholder="Password" />
        </div>

        <div class="main-password__submit flex justify-center">
          <input class="btn" type="submit" value="Sign in" />
        </div>
      </div>
    {% endform %}
  </div>
</section>
