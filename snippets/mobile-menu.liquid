<ul
  id="mobile-menu-list"
  class="mobile-menu-list z-20 p-7.5 bg-indigo-900 w-screen -left-6 absolute top-full"
  x-show="$store.global.isMobileMenuVisible"
  role="menu"
>
  {% for link in linklists['main-menu'].links %}
    <li class="mobile-menu-item" role="presentation">
      <a href="{{ link.url }}" role="menuitem" class="mb-2.5 block text-[26px] font-bold tracking-[1.2px] text-white no-underline">{{ link.title }}</a>
    </li>
  {% endfor %}
  <li></li>
</ul>
