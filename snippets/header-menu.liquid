<ul class="header-menu">
  {% for link in linklists.main-menu.links %}
    <li>
      <a href="{{ link.url }}" {% if link.active %}class="active"{% endif %}>
        {{ link.title | escape }}
      </a>
    </li>
  {% endfor %}
  <button type="button" x-data @click="$store.global.isMinicartVisible = true">
    Minicart
  </button>
</ul>

<style>
  .header-menu {
    display: flex;
    align-items: center;
    padding: 1rem;
  }
  .header-menu button {
    -webkit-appearance: none;
    appearance: none;
    -moz-appearance: none;
    background: none;
    border: none;
  }
  .header-menu a, .header-menu button {
    color: white;
    text-decoration: none;
    margin-right: 1rem;
    cursor: pointer;
    font-size: 1rem;
  }
  .header-menu a.active {
    text-decoration: underline;
  }

  @media (max-width: 576px) {
    .header-menu {
      display: none;
    }
  }
</style>


